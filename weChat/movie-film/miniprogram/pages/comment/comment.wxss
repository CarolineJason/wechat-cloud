.comment {
  padding-bottom: 20px;
}

.comment-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.comment-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.comment-info {
  position: absolute;
  top: 10px;
  left: 10px;
  display: flex;
  justify-content: center;
}

.comment-img {
  width: 280rpx;
  height: 350rpx;
}

.comment-detail {
  flex: 1;
  margin: 30px 0 0 10px;
  color: #fff;
}

.comment-title {
  font-weight: bolder;
  font-size: 40rpx;
}

.comment-score {
  color: #faf000;
  margin-left: 20px;
  font-weight: bolder;
  font-size: 34rpx;
}

.country {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.comment-coountry {
  margin-right: 10rpx;
  font-size: 30rpx;
  margin-top: 15rpx;
}

.writers {
  margin-right: 10rpx;
  font-size: 30rpx;
  margin-top: 15rpx;
}

.movie-introduce {
  font-size: 30rpx;
  margin-top: 20rpx;
  padding: 10px;
  box-sizing: border-box;
  color: #2b2b2b;
}

.input-comment {
  margin: 10px;
  box-sizing: border-box;
}

.upload {
  margin: 10px;
  box-sizing: border-box;
}

.rate {
  margin: 10px;
  box-sizing: border-box;
}

.pre-wrapper {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.pre-img {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  border-radius: 5px;
  margin: 5px;
}
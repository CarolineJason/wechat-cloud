@import '../movie/movie-template.wxss';

.movie-list-container {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.movie-inner {
  margin: 0 auto 20rpx;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
}

.slogan {
  font-size: 30rpx;
  margin-left: 18rpx;
  font-weight: 500;
}

.more {
  float: right;
}

.more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movie-container {
  display: flex;
  flex-direction: row;
}

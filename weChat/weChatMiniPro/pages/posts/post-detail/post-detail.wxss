.container {
  display: flex;
  flex-direction: column;
  
}

.img-wrap {
  position: relative;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.music {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -40rpx;
  margin-left: -40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  opacity: 0.4;
  z-index: 100;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.author {
  font-size: 30rpx;
  flex-wrap: 300;
  color: #666;
  margin-left: 20rpx;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.tool {
  margin-top: 5rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  line-height: 44rpx;
  margin-right: 30rpx;
  letter-spacing: 2rpx;
}

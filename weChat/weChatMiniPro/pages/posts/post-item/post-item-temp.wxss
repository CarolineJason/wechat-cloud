.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 10px;
  background: #fff;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.post-logoInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

.post-logo {
  width: 60rpx;
  height: 60rpx;
   margin-left: 20rpx; 
  border-radius: 50%;
}

.post-title {
  margin-left: 20px;
  font-size: 30rpx;
  font-weight: 500;
}

.post-content-title {
  margin-top: 20rpx;
  font-size: 30rpx;
  margin-bottom:10px; 
  margin-left:20rpx; 
  color: #333;
  font-weight: bold;
}

.post-content-img {
  width: 100%;
  height: 440rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  padding: 0 20rpx;
}

.comment {
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.comment-list {
  margin-right: 20rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #ccc;
}